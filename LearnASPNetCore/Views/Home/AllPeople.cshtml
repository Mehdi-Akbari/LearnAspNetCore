
@model IEnumerable<Person>
@{

}

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Last name</th>
            <th>Marriage status</th>
        </tr>
    </thead>
    <tbody>

        @foreach (Person p in Model)
        {
            <tr>
                <td>@p.Name</td>
                <td>@p.LastName</td>
                <td>
                    @if (p.Married == true)
                    {
                        @:Married
                    }
                    else
                   if (p.Married == false)
                    {
                        @:Single
                    }

                </td>
            </tr>
        }


    </tbody>
</table>
